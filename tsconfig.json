{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@game/*": ["game/*"]
    },
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src"]
}
